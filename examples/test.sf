data Nat : Type {
  z : Nat,
  s : Nat -> Nat,
}

def add : Nat -> Nat -> Nat {
  \m n => case m {
    z => n,
    s m' => s (add m' n),
  }
}

repr NatWord {
  data Nat as Word {
    z as word-zero,
    s n as word-add n word-one,
    case n {
      z => b,
      s => r,
    } as (
      switch-word _ b r n
      -- if-then-else _ (word-is-zero n) b (r (word-sub n word-one))
    )
  }

  def add as word-add
}

def fib : Nat -> Nat {
  \n => case n {
    z => z,
    s i => case i {
      z => s z,
      s j => add (fib i) (fib j),
    },
  }
}
