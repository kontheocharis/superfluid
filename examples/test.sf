-- Foo

data Bool : Type {
  true : Bool,
  false : Bool,
}

def if-then-else : (T : Type) -> Bool -> T -> T -> T {
  \T b t e => case b {
    true => t,
    false => e,
  }
}

data Word : Type {
  zw : Word,
  sw : Word -> Word,
}

def word-zero : Word {
  zw
}

def word-add : Word -> Word -> Word {
  \m n => case m {
    zw => n,
    sw m' => sw (word-add m' n),
  }
}

def word-one : Word {
  sw zw
}

def word-is-zero : Word -> Bool {
  \m => case m {
    zw => true,
    sw m' => false,
  }
}

def word-sub : Word -> Word -> Word {
  \m n => case n {
    zw => m,
    sw n' => case m {
      zw => zw,
      sw m' => word-sub m' n',
    },
  }
}

def switch-word : (F : Word -> Type) -> F word-zero -> ((w : Word) -> F (word-add w word-one)) -> (w : Word) -> F w {
  ?h2
}


